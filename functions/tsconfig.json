{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "rootDir": "./",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2021"]
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["../node_modules"]
}
