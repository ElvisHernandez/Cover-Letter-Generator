{
  "rules": {
    "users": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "coverLetters": {
      "$coverLetterId": {
        ".read": "data.child('userUid').val() === auth.uid",
        ".write": "newData.child('userUid').val() === auth.uid"
      }
    }
  }
}
