{
  "rules": {
    "users": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "coverLetters": {
      ".indexOn": ["userUid"],
      ".read": "query.orderByChild === 'userUid' && query.equalTo === auth.uid",
      "$coverLetterId": {
        ".write": "auth != null && newData.child('userUid').val() === auth.uid"
      }
    }
  }
}
